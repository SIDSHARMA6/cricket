{
  "kind": "collectionType",
  "collectionName": "match_responses",
  "info": {
    "singularName": "match-response",
    "pluralName": "match-responses",
    "displayName": "Match Response",
    "description": "User availability responses for matches"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "match": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::match.match",
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "response": {
      "type": "enumeration",
      "enum": ["available", "not_available", "maybe"],
      "required": true
    },
    "message": {
      "type": "text"
    },
    "responseDate": {
      "type": "datetime",
      "default": "now"
    }
  }
}