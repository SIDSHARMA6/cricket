{
  "kind": "collectionType",
  "collectionName": "tournaments",
  "info": {
    "singularName": "tournament",
    "pluralName": "tournaments",
    "displayName": "Tournament",
    "description": "Cricket tournaments and leagues"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "registrationDeadline": {
      "type": "datetime"
    },
    "entryFee": {
      "type": "decimal",
      "default": 0
    },
    "prizePool": {
      "type": "decimal",
      "default": 0
    },
    "maxTeams": {
      "type": "integer",
      "required": true
    },
    "tournamentType": {
      "type": "enumeration",
      "enum": ["League", "Knockout", "Round Robin", "T20 Blast", "ODI Series"],
      "default": "League"
    },
    "status": {
      "type": "enumeration",
      "enum": ["upcoming", "registration_open", "ongoing", "completed", "cancelled"],
      "default": "upcoming"
    },
    "organizer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "teams": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::team.team"
    },
    "matches": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::match.match"
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "rules": {
      "type": "richtext"
    },
    "location": {
      "type": "string"
    },
    "sponsors": {
      "type": "json"
    },
    "isPublic": {
      "type": "boolean",
      "default": true
    }
  }
}