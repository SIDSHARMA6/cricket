{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notification",
    "description": "User notifications for matches, tournaments, and activities"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "recipient": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "type": {
      "type": "enumeration",
      "enum": ["match_invite", "match_reminder", "match_update", "tournament_update", "chat_mention", "achievement", "general"],
      "default": "general"
    },
    "isRead": {
      "type": "boolean",
      "default": false
    },
    "readAt": {
      "type": "datetime"
    },
    "actionUrl": {
      "type": "string"
    },
    "metadata": {
      "type": "json"
    },
    "priority": {
      "type": "enumeration",
      "enum": ["low", "medium", "high", "urgent"],
      "default": "medium"
    },
    "expiresAt": {
      "type": "datetime"
    }
  }
}