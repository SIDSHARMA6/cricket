{
  "kind": "collectionType",
  "collectionName": "chats",
  "info": {
    "singularName": "chat",
    "pluralName": "chats",
    "displayName": "Community Chat",
    "description": "Community chat for all registered cricket players"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "message": {
      "type": "text",
      "required": true
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "messageType": {
      "type": "enumeration",
      "default": "text",
      "enum": [
        "text",
        "image",
        "video",
        "audio",
        "file",
        "match_invite",
        "celebration"
      ]
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos",
        "audios",
        "files"
      ]
    },
    "replyTo": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::chat.chat"
    },
    "reactions": {
      "type": "json"
    },
    "mentions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user"
    },
    "isEdited": {
      "type": "boolean",
      "default": false
    },
    "editedAt": {
      "type": "datetime"
    },
    "isDeleted": {
      "type": "boolean",
      "default": false
    },
    "deletedAt": {
      "type": "datetime"
    },
    "tags": {
      "type": "json"
    }
  }
}
