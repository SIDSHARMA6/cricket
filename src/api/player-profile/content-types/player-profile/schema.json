{
  "kind": "collectionType",
  "collectionName": "player_profiles",
  "info": {
    "singularName": "player-profile",
    "pluralName": "player-profiles",
    "displayName": "Player Profile",
    "description": "Cricket player profiles and statistics"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "displayName": {
      "type": "string",
      "required": true
    },
    "age": {
      "type": "integer",
      "min": 10,
      "max": 80
    },
    "birthday": {
      "type": "date"
    },
    "role": {
      "type": "enumeration",
      "enum": ["Batsman", "Bowler", "All-rounder", "Wicket-keeper", "Captain"],
      "required": true
    },
    "battingStyle": {
      "type": "enumeration",
      "enum": ["Right-handed", "Left-handed"]
    },
    "bowlingStyle": {
      "type": "enumeration",
      "enum": ["Right-arm fast", "Left-arm fast", "Right-arm medium", "Left-arm medium", "Right-arm spin", "Left-arm spin", "Leg-spin", "Off-spin"]
    },
    "skillLevel": {
      "type": "enumeration",
      "enum": ["Beginner", "Intermediate", "Advanced", "Professional"],
      "default": "Beginner"
    },
    "location": {
      "type": "string"
    },
    "bio": {
      "type": "text"
    },
    "profileImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "stats": {
      "type": "component",
      "component": "cricket.player-stats",
      "repeatable": false
    },
    "achievements": {
      "type": "component",
      "component": "cricket.achievement",
      "repeatable": true
    },
    "isAvailable": {
      "type": "boolean",
      "default": true
    },
    "rating": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "max": 5
    },
    "totalMatches": {
      "type": "integer",
      "default": 0
    },
    "phoneNumber": {
      "type": "string"
    },
    "emergencyContact": {
      "type": "string"
    }
  }
}
