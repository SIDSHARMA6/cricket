# Required environment variables for production/Render deployment

# Server
HOST=0.0.0.0
PORT=1337

# Admin and API keys (generate secure random values)
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret

# Database (use Render Postgres)
DATABASE_CLIENT=postgres
DATABASE_URL=postgres://user:password@host:5432/dbname
DATABASE_SSL=true

# Media Upload - Cloudinary
CLOUDINARY_NAME=your-cloud-name
CLOUDINARY_KEY=your-api-key
CLOUDINARY_SECRET=your-api-secret

# CORS (set to your Flutter app origin in production)
CORS_ORIGIN=https://your-flutter-app.com

# Optional: Redis for chat scaling (Render Redis)
REDIS_URL=redis://redis:6379